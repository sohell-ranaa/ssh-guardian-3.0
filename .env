# SSH Guardian v3.0 - Minimal Configuration
# All other settings are managed in the database via the dashboard

# Database Connection (Required)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=123123
DB_NAME=ssh_guardian_v3_1

# Flask Session Secret (Required)
# Generate new key: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY="8a4f2c8b3e5d9a1f7b6c4e8d2a9f3c5b7e1d6f8a2c4b9e7d3f5a1c8b6e4d2f9"

# Redis Cache (Optional - for performance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Cache TTL Settings (in seconds)
# Real-time data - very short TTL
CACHE_TTL_EVENTS_LIST=15
CACHE_TTL_EVENTS_COUNT=15
CACHE_TTL_DASHBOARD_SUMMARY=15
CACHE_TTL_EVENTS_ANALYSIS=15
CACHE_TTL_EVENTS_TIMELINE=30

# Frequently changing data
CACHE_TTL_EVENTS_STATS=30
CACHE_TTL_IP_HISTORY=30
CACHE_TTL_ML_PREDICTIONS=60
CACHE_TTL_BLOCKING=30
CACHE_TTL_AUDIT=60
CACHE_TTL_NOTIFICATIONS=30

# Semi-static data
CACHE_TTL_THREAT_INTEL=300
CACHE_TTL_GEOIP=300
CACHE_TTL_TRENDS=120
CACHE_TTL_DAILY_REPORTS=300
CACHE_TTL_ML_MODELS=120
CACHE_TTL_SETTINGS=30

# Global cache toggle (set to 0 to disable all caching)
CACHE_ENABLED=1

# Email Configuration for OTP (Required for login OTP emails)
# For Gmail: Enable "App Passwords" in Google Account Security
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=SSH Guardian v3.0
