                <!-- Manual Block Form (Hidden by default) -->
                <div id="manualBlockForm" class="card" style="display: none; margin-bottom: 20px;">
                    <div class="card-title">Block IP Address</div>
                    <div style="display: grid; gap: 12px; max-width: 600px;">
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">IP Address *</label>
                            <input type="text" id="blockIpAddress" placeholder="192.168.1.100" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                        </div>
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Reason *</label>
                            <input type="text" id="blockReason" placeholder="Suspicious activity" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                        </div>
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Duration (minutes)</label>
                            <input type="number" id="blockDuration" value="1440" placeholder="1440 (24 hours)" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                        </div>
                        <div style="display: flex; gap: 8px;">
                            <button id="submitBlockIp" style="padding: 8px 16px; background: var(--azure-blue); color: white; border: none; border-radius: 2px; cursor: pointer; font-size: 13px;">
                                Block IP
                            </button>
                            <button id="cancelBlockForm" style="padding: 8px 16px; background: var(--surface); border: 1px solid var(--border); border-radius: 2px; cursor: pointer; font-size: 13px;">
                                Cancel
                            </button>
                        </div>
                        <div id="blockFormMessage" style="display: none; padding: 8px 12px; border-radius: 2px; font-size: 13px;"></div>
                    </div>
                </div>

                <!-- Manual Unblock Form (Hidden by default) -->
                <div id="manualUnblockForm" class="card" style="display: none; margin-bottom: 20px;">
                    <div class="card-title">Unblock IP Address</div>
                    <div style="display: grid; gap: 12px; max-width: 600px;">
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">IP Address *</label>
                            <input type="text" id="unblockIpAddress" placeholder="192.168.1.100" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                        </div>
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Reason (optional)</label>
                            <input type="text" id="unblockReason" placeholder="False positive" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                        </div>
                        <div style="display: flex; gap: 8px;">
                            <button id="submitUnblockIp" style="padding: 8px 16px; background: #107C10; color: white; border: none; border-radius: 2px; cursor: pointer; font-size: 13px;">
                                Unblock IP
                            </button>
                            <button id="cancelUnblockForm" style="padding: 8px 16px; background: var(--surface); border: 1px solid var(--border); border-radius: 2px; cursor: pointer; font-size: 13px;">
                                Cancel
                            </button>
                        </div>
                        <div id="unblockFormMessage" style="display: none; padding: 8px 12px; border-radius: 2px; font-size: 13px;"></div>
                    </div>
                </div>

                <!-- Blocks Table -->
                <div class="card">
                    <div id="blocksLoading" style="text-align: center; padding: 40px; color: var(--text-secondary);">
                        Loading blocked IPs...
                    </div>
                    <div id="blocksTable" style="display: none;">
                        <table style="width: 100%; border-collapse: collapse; font-size: 13px;">
                            <thead>
                                <tr style="background: var(--background); border-bottom: 2px solid var(--border);">
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">IP Address</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Location</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Reason</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Source</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Blocked At</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Unblock At</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Status</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="blocksTableBody">
                                <!-- Blocks will be inserted here -->
                            </tbody>
                        </table>
                        <div id="blocksPagination" style="padding: 16px; display: flex; justify-content: space-between; align-items: center; border-top: 1px solid var(--border);">
                            <div id="blocksInfo" style="color: var(--text-secondary); font-size: 13px;"></div>
                            <div style="display: flex; gap: 8px;">
                                <button id="prevBlocksPage" style="padding: 6px 12px; border: 1px solid var(--border); background: var(--surface); border-radius: 2px; cursor: pointer; font-size: 13px;">Previous</button>
                                <button id="nextBlocksPage" style="padding: 6px 12px; border: 1px solid var(--border); background: var(--surface); border-radius: 2px; cursor: pointer; font-size: 13px;">Next</button>
                            </div>
                        </div>
                    </div>
                    <div id="blocksError" style="display: none; text-align: center; padding: 40px; color: #D13438;">
                        Error loading blocked IPs
                    </div>
                </div>
            </div>

            <!-- Blocking Rules Page -->
            <div id="page-rules" class="page-content" style="display: none;">
                <div class="page-header">
                    <h1 class="page-title">Blocking Rules</h1>
                    <p class="page-subtitle">Manage automatic blocking rules and thresholds</p>
                </div>

                <!-- Quick Actions -->
                <div class="card" style="margin-bottom: 20px;">
                    <div style="display: flex; gap: 12px; flex-wrap: wrap; align-items: center;">
                        <button id="showCreateRuleForm" style="padding: 8px 16px; background: var(--azure-blue); color: white; border: none; border-radius: 2px; cursor: pointer; font-size: 13px;">
                            ‚ûï Create Rule
                        </button>
                        <button id="refreshRules" style="padding: 8px 16px; background: var(--surface); border: 1px solid var(--border); border-radius: 2px; cursor: pointer; font-size: 13px;">
                            üîÑ Refresh
                        </button>
                    </div>
                </div>

                <!-- Create Rule Form (Hidden by default) -->
                <div id="createRuleForm" class="card" style="display: none; margin-bottom: 20px;">
                    <div class="card-title">Create Blocking Rule</div>
                    <div style="display: grid; gap: 12px; max-width: 700px;">
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Rule Name *</label>
                            <input type="text" id="ruleName" placeholder="Brute Force Protection" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                        </div>
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Rule Type *</label>
                            <select id="ruleType" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                                <option value="">Select type...</option>
                                <option value="brute_force">Brute Force Detection</option>
                                <option value="api_reputation">API Reputation Threshold</option>
                            </select>
                        </div>

                        <!-- Brute Force Conditions -->
                        <div id="bruteForceConditions" style="display: none; padding: 16px; background: var(--background); border-radius: 4px;">
                            <div style="font-size: 13px; font-weight: 600; margin-bottom: 12px;">Brute Force Conditions</div>
                            <div style="display: grid; gap: 12px;">
                                <div>
                                    <label style="display: block; font-size: 12px; margin-bottom: 4px;">Failed Attempts Threshold</label>
                                    <input type="number" id="failedAttempts" value="5" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                                </div>
                                <div>
                                    <label style="display: block; font-size: 12px; margin-bottom: 4px;">Time Window (minutes)</label>
                                    <input type="number" id="timeWindow" value="10" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                                </div>
                            </div>
                        </div>

                        <!-- Threat Conditions -->
                        <div id="threatConditions" style="display: none; padding: 16px; background: var(--background); border-radius: 4px;">
                            <div style="font-size: 13px; font-weight: 600; margin-bottom: 12px;">Threat Intelligence Conditions</div>
                            <div style="display: grid; gap: 12px;">
                                <div>
                                    <label style="display: block; font-size: 12px; margin-bottom: 4px;">Minimum Threat Level</label>
                                    <select id="minThreatLevel" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                                        <option value="low">Low</option>
                                        <option value="medium">Medium</option>
                                        <option value="high" selected>High</option>
                                        <option value="critical">Critical</option>
                                    </select>
                                </div>
                                <div>
                                    <label style="display: block; font-size: 12px; margin-bottom: 4px;">Minimum Confidence (0-1)</label>
                                    <input type="number" id="minConfidence" value="0.5" step="0.1" min="0" max="1" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                                </div>
                            </div>
                        </div>

                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Block Duration (minutes)</label>
                            <input type="number" id="ruleBlockDuration" value="1440" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                            <div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">Default: 1440 minutes (24 hours)</div>
                        </div>
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Priority (higher = evaluated first)</label>
                            <input type="number" id="rulePriority" value="50" style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px;">
                        </div>
                        <div>
                            <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 4px;">Description</label>
                            <textarea id="ruleDescription" placeholder="Describe when this rule should trigger..." style="width: 100%; padding: 8px 12px; border: 1px solid var(--border); border-radius: 2px; font-size: 13px; min-height: 80px;"></textarea>
                        </div>
                        <div style="display: flex; gap: 8px;">
                            <button id="submitCreateRule" style="padding: 8px 16px; background: var(--azure-blue); color: white; border: none; border-radius: 2px; cursor: pointer; font-size: 13px;">
                                Create Rule
                            </button>
                            <button id="cancelRuleForm" style="padding: 8px 16px; background: var(--surface); border: 1px solid var(--border); border-radius: 2px; cursor: pointer; font-size: 13px;">
                                Cancel
                            </button>
                        </div>
                        <div id="ruleFormMessage" style="display: none; padding: 8px 12px; border-radius: 2px; font-size: 13px;"></div>
                    </div>
                </div>

                <!-- Rules Table -->
                <div class="card">
                    <div id="rulesLoading" style="text-align: center; padding: 40px; color: var(--text-secondary);">
                        Loading blocking rules...
                    </div>
                    <div id="rulesTable" style="display: none;">
                        <table style="width: 100%; border-collapse: collapse; font-size: 13px;">
                            <thead>
                                <tr style="background: var(--background); border-bottom: 2px solid var(--border);">
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Rule Name</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Type</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Priority</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Conditions</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Statistics</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Status</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600;">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="rulesTableBody">
                                <!-- Rules will be inserted here -->
                            </tbody>
                        </table>
                    </div>
                    <div id="rulesError" style="display: none; text-align: center; padding: 40px; color: #D13438;">
                        Error loading blocking rules
                    </div>
                </div>
            </div>

            <!-- Other pages will be loaded dynamically -->
            <div id="dynamic-content" style="display: none;"></div>
        </div>
    </div>

    <script>
        // Load user info
        fetch('/auth/me', {
            credentials: 'same-origin'
        })
            .then(res => {
                if (!res.ok) {
                    window.location.href = '/login';
                    throw new Error('Not authenticated');
                }
                return res.json();
            })
            .then(data => {
                document.getElementById('userName').textContent = data.user.full_name;
            })
            .catch(error => {
                console.error('Error loading user:', error);
            });

        // Logout
        document.getElementById('logoutBtn').addEventListener('click', async () => {
            try {
                const response = await fetch('/auth/logout', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'same-origin'
                });

                if (response.ok) {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        });

        // Sidebar toggle
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
        });

        // Submenu toggle
        document.querySelectorAll('.nav-item[data-submenu]').forEach(item => {
            item.addEventListener('click', (e) => {
                const submenuId = 'submenu-' + item.dataset.submenu;
                const submenu = document.getElementById(submenuId);

                item.classList.toggle('expanded');
                submenu.classList.toggle('show');
            });
        });

        // Navigation - hash-based routing
        function showPage(pageName) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(page => {
                page.style.display = 'none';
            });

            // Show selected page
            const pageEl = document.getElementById('page-' + pageName);
            if (pageEl) {
                pageEl.style.display = 'block';

                // Load page-specific content
                if (pageName === 'events-live') {
                    loadEvents();
                }
            }
        }

        document.querySelectorAll('.nav-item[data-page], .nav-subitem[data-page]').forEach(item => {
            item.addEventListener('click', (e) => {
                // Update active state
                document.querySelectorAll('.nav-item, .nav-subitem').forEach(nav => {
                    nav.classList.remove('active');
                });
                item.classList.add('active');

                // Get page name and show it
                const pageName = item.dataset.page || 'dashboard';
                showPage(pageName);
            });
        });

        // Handle browser back/forward
        window.addEventListener('hashchange', () => {
            const hash = window.location.hash.substring(1);
            if (hash) {
                showPage(hash.replace('/', '-'));
            }
        });

        // ===================================================================
        // Events Page Logic
        // ===================================================================
        let currentPage = 0;
        const pageSize = 50;

        function getThreatBadge(level) {
            const colors = {
                'clean': '#107C10',
                'low': '#0078D4',
                'medium': '#FF8C00',
                'high': '#D83B01',
                'critical': '#A80000'
            };
            const color = colors[level] || '#605E5C';
            return `<span style="background: ${color}; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px; font-weight: 600; text-transform: uppercase;">${level || 'N/A'}</span>`;
        }

        function getStatusBadge(status) {
            const colors = {
                'failed': '#D13438',
                'successful': '#107C10',
                'invalid': '#FF8C00'
            };
            const color = colors[status] || '#605E5C';
            return `<span style="color: ${color}; font-weight: 600;">${status}</span>`;
        }

        function formatTimestamp(timestamp) {
            if (!timestamp) return 'N/A';
            const date = new Date(timestamp);
            return date.toLocaleString();
        }

        async function loadEvents() {
            const search = document.getElementById('eventSearch').value;
            const eventType = document.getElementById('eventTypeFilter').value;
            const threatLevel = document.getElementById('threatLevelFilter').value;

            const params = new URLSearchParams({
                limit: pageSize,
                offset: currentPage * pageSize
            });

            if (search) params.append('search', search);
            if (eventType) params.append('event_type', eventType);
            if (threatLevel) params.append('threat_level', threatLevel);

            // Show loading
            document.getElementById('eventsLoading').style.display = 'block';
            document.getElementById('eventsTable').style.display = 'none';
            document.getElementById('eventsError').style.display = 'none';

            try {
                const response = await fetch(`/api/dashboard/events/list?${params}`);
                const data = await response.json();

                if (!data.success) {
                    throw new Error('Failed to load events');
                }

                const tbody = document.getElementById('eventsTableBody');
                tbody.innerHTML = '';

                if (data.events.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 40px; color: var(--text-secondary);">No events found</td></tr>';
                } else {
                    data.events.forEach(event => {
                        const row = document.createElement('tr');
                        row.style.borderBottom = '1px solid var(--border)';

                        const location = event.location ?
                            `${event.location.city || 'Unknown'}, ${event.location.country || ''}` :
                            'Unknown';

                        const flags = [];
                        if (event.location?.is_proxy) flags.push('üîí Proxy');
                        if (event.location?.is_vpn) flags.push('üîê VPN');
                        if (event.location?.is_tor) flags.push('üßÖ Tor');

                        const threatInfo = event.threat ? `
                            <div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">
                                ${event.threat.abuseipdb_score ? `Abuse: ${event.threat.abuseipdb_score} | ` : ''}
                                ${event.threat.virustotal_detections ? `VT: ${event.threat.virustotal_detections}` : ''}
                            </div>
                        ` : '';

                        row.innerHTML = `
                            <td style="padding: 12px; font-size: 12px;">${formatTimestamp(event.timestamp)}</td>
                            <td style="padding: 12px;">
                                <div style="font-family: monospace; font-size: 13px;">${event.ip}</div>
                                ${flags.length > 0 ? `<div style="font-size: 10px; color: var(--text-secondary); margin-top: 4px;">${flags.join(' ')}</div>` : ''}
                            </td>
                            <td style="padding: 12px; font-size: 12px;">
                                ${event.location?.country_code ? `<span style="font-size: 16px;">${getFlagEmoji(event.location.country_code)}</span> ` : ''}
                                ${location}
                                ${event.location?.isp ? `<div style="font-size: 11px; color: var(--text-secondary);">${event.location.isp}</div>` : ''}
                            </td>
                            <td style="padding: 12px; font-family: monospace; font-size: 13px;">${event.username}</td>
                            <td style="padding: 12px;">${getStatusBadge(event.event_type)}</td>
                            <td style="padding: 12px;">
                                ${getThreatBadge(event.threat?.level)}
                                ${threatInfo}
                            </td>
                            <td style="padding: 12px; font-size: 12px;">
                                Server: ${event.server || 'N/A'}<br>
                                Method: ${event.auth_method || 'N/A'}
                            </td>
                            <td style="padding: 12px;">
                                <button onclick="quickBlock('${event.ip}', 'Blocked from Live Events - ${event.event_type} attempt')" style="padding: 4px 8px; border: 1px solid var(--border); background: #D83B01; color: white; border-radius: 2px; cursor: pointer; font-size: 11px;">
                                    Block IP
                                </button>
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                }

                // Update pagination
                const { total, offset, has_more } = data.pagination;
                document.getElementById('eventsInfo').textContent = `Showing ${offset + 1}-${Math.min(offset + pageSize, total)} of ${total} events`;
                document.getElementById('prevPage').disabled = currentPage === 0;
                document.getElementById('nextPage').disabled = !has_more;

                // Show table
                document.getElementById('eventsLoading').style.display = 'none';
                document.getElementById('eventsTable').style.display = 'block';

            } catch (error) {
                console.error('Error loading events:', error);
                document.getElementById('eventsLoading').style.display = 'none';
                document.getElementById('eventsError').style.display = 'block';
            }
        }

        function getFlagEmoji(countryCode) {
            if (!countryCode) return '';
            const codePoints = countryCode
                .toUpperCase()
                .split('')
                .map(char => 127397 + char.charCodeAt());
            return String.fromCodePoint(...codePoints);
        }

        // Event listeners for events page
        document.getElementById('refreshEvents')?.addEventListener('click', () => {
            currentPage = 0;
            loadEvents();
        });

        document.getElementById('eventSearch')?.addEventListener('keyup', (e) => {
            if (e.key === 'Enter') {
                currentPage = 0;
                loadEvents();
            }
        });

        document.getElementById('eventTypeFilter')?.addEventListener('change', () => {
            currentPage = 0;
            loadEvents();
        });

        document.getElementById('threatLevelFilter')?.addEventListener('change', () => {
            currentPage = 0;
            loadEvents();
        });

        document.getElementById('prevPage')?.addEventListener('click', () => {
            if (currentPage > 0) {
                currentPage--;
                loadEvents();
            }
        });

        document.getElementById('nextPage')?.addEventListener('click', () => {
            currentPage++;
            loadEvents();
        });

        // ===================================================================
        // Blocked IPs Page Logic
        // ===================================================================
        let currentBlocksPage = 0;
        const blocksPageSize = 50;

        async function loadBlocks() {
            const blockSource = document.getElementById('blockSourceFilter').value;
            const isActive = document.getElementById('blockStatusFilter').value;

            const params = new URLSearchParams({
                limit: blocksPageSize,
                offset: currentBlocksPage * blocksPageSize
            });

            if (blockSource) params.append('block_source', blockSource);
            if (isActive) params.append('is_active', isActive);

            // Show loading
            document.getElementById('blocksLoading').style.display = 'block';
            document.getElementById('blocksTable').style.display = 'none';
            document.getElementById('blocksError').style.display = 'none';

            try {
                const response = await fetch(`/api/dashboard/blocking/blocks/list?${params}`);
                const data = await response.json();

                if (!data.success) {
                    throw new Error('Failed to load blocks');
                }

                const tbody = document.getElementById('blocksTableBody');
                tbody.innerHTML = '';

                if (data.blocks.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 40px; color: var(--text-secondary);">No blocked IPs found</td></tr>';
                } else {
                    data.blocks.forEach(block => {
                        const row = document.createElement('tr');
                        row.style.borderBottom = '1px solid var(--border)';

                        const location = block.location ?
                            `${block.location.city || 'Unknown'}, ${block.location.country || ''}` :
                            'Unknown';

                        const statusBadge = block.is_active ?
                            '<span style="background: #D83B01; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px; font-weight: 600;">ACTIVE</span>' :
                            '<span style="background: #605E5C; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px; font-weight: 600;">INACTIVE</span>';

                        const sourceBadge = {
                            'manual': '<span style="background: #0078D4; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px;">Manual</span>',
                            'rule_based': '<span style="background: #8661C5; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px;">Rule-Based</span>',
                            'api_reputation': '<span style="background: #FF8C00; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px;">API Reputation</span>'
                        }[block.source] || block.source;

                        const unblockButton = block.is_active ?
                            `<button onclick="quickUnblock('${block.ip_address}')" style="padding: 4px 8px; border: 1px solid var(--border); background: #107C10; color: white; border-radius: 2px; cursor: pointer; font-size: 11px;">
                                Unblock
                            </button>` :
                            '<span style="font-size: 11px; color: var(--text-secondary);">‚Äî</span>';

                        row.innerHTML = `
                            <td style="padding: 12px;">
                                <div style="font-family: monospace; font-size: 13px;">${block.ip_address}</div>
                                ${block.rule_name ? `<div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">Rule: ${block.rule_name}</div>` : ''}
                            </td>
                            <td style="padding: 12px; font-size: 12px;">${location}</td>
                            <td style="padding: 12px; font-size: 12px;">
                                ${block.reason}
                                ${block.failed_attempts ? `<div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">Failed attempts: ${block.failed_attempts}</div>` : ''}
                            </td>
                            <td style="padding: 12px;">${sourceBadge}</td>
                            <td style="padding: 12px; font-size: 12px;">${formatTimestamp(block.blocked_at)}</td>
                            <td style="padding: 12px; font-size: 12px;">${block.unblock_at ? formatTimestamp(block.unblock_at) : 'Permanent'}</td>
                            <td style="padding: 12px;">${statusBadge}</td>
                            <td style="padding: 12px;">${unblockButton}</td>
                        `;
                        tbody.appendChild(row);
                    });
                }

                // Update pagination
                const { total, offset, has_more } = data.pagination;
                document.getElementById('blocksInfo').textContent = `Showing ${offset + 1}-${Math.min(offset + blocksPageSize, total)} of ${total} blocks`;
                document.getElementById('prevBlocksPage').disabled = currentBlocksPage === 0;
                document.getElementById('nextBlocksPage').disabled = !has_more;

                // Show table
                document.getElementById('blocksLoading').style.display = 'none';
                document.getElementById('blocksTable').style.display = 'block';

            } catch (error) {
                console.error('Error loading blocks:', error);
                document.getElementById('blocksLoading').style.display = 'none';
                document.getElementById('blocksError').style.display = 'block';
            }
        }

        // Block IP form handlers
        document.getElementById('showManualBlockForm')?.addEventListener('click', () => {
            document.getElementById('manualBlockForm').style.display = 'block';
            document.getElementById('manualUnblockForm').style.display = 'none';
        });

        document.getElementById('cancelBlockForm')?.addEventListener('click', () => {
            document.getElementById('manualBlockForm').style.display = 'none';
            document.getElementById('blockIpAddress').value = '';
            document.getElementById('blockReason').value = '';
            document.getElementById('blockDuration').value = '1440';
            document.getElementById('blockFormMessage').style.display = 'none';
        });

        document.getElementById('submitBlockIp')?.addEventListener('click', async () => {
            const ipAddress = document.getElementById('blockIpAddress').value;
            const reason = document.getElementById('blockReason').value;
            const duration = parseInt(document.getElementById('blockDuration').value);

            if (!ipAddress || !reason) {
                showMessage('blockFormMessage', 'Please fill in all required fields', 'error');
                return;
            }

            try {
                const response = await fetch('/api/dashboard/blocking/blocks/manual', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        ip_address: ipAddress,
                        reason: reason,
                        duration_minutes: duration
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showMessage('blockFormMessage', `‚úÖ ${data.message}`, 'success');
                    setTimeout(() => {
                        document.getElementById('manualBlockForm').style.display = 'none';
                        document.getElementById('blockIpAddress').value = '';
                        document.getElementById('blockReason').value = '';
                        document.getElementById('blockFormMessage').style.display = 'none';
                        loadBlocks();
                    }, 2000);
                } else {
                    showMessage('blockFormMessage', `‚ùå ${data.error || 'Failed to block IP'}`, 'error');
                }
            } catch (error) {
                console.error('Error blocking IP:', error);
                showMessage('blockFormMessage', '‚ùå Error blocking IP', 'error');
            }
        });

        // Unblock IP form handlers
        document.getElementById('showManualUnblockForm')?.addEventListener('click', () => {
            document.getElementById('manualUnblockForm').style.display = 'block';
            document.getElementById('manualBlockForm').style.display = 'none';
        });

        document.getElementById('cancelUnblockForm')?.addEventListener('click', () => {
            document.getElementById('manualUnblockForm').style.display = 'none';
            document.getElementById('unblockIpAddress').value = '';
            document.getElementById('unblockReason').value = '';
            document.getElementById('unblockFormMessage').style.display = 'none';
        });

        document.getElementById('submitUnblockIp')?.addEventListener('click', async () => {
            const ipAddress = document.getElementById('unblockIpAddress').value;
            const reason = document.getElementById('unblockReason').value || 'Manual unblock';

            if (!ipAddress) {
                showMessage('unblockFormMessage', 'Please enter an IP address', 'error');
                return;
            }

            try {
                const response = await fetch('/api/dashboard/blocking/blocks/unblock', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        ip_address: ipAddress,
                        reason: reason
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showMessage('unblockFormMessage', `‚úÖ ${data.message}`, 'success');
                    setTimeout(() => {
                        document.getElementById('manualUnblockForm').style.display = 'none';
                        document.getElementById('unblockIpAddress').value = '';
                        document.getElementById('unblockReason').value = '';
                        document.getElementById('unblockFormMessage').style.display = 'none';
                        loadBlocks();
                    }, 2000);
                } else {
                    showMessage('unblockFormMessage', `‚ùå ${data.error || 'Failed to unblock IP'}`, 'error');
                }
            } catch (error) {
                console.error('Error unblocking IP:', error);
                showMessage('unblockFormMessage', '‚ùå Error unblocking IP', 'error');
            }
        });

        document.getElementById('refreshBlocks')?.addEventListener('click', () => {
            currentBlocksPage = 0;
            loadBlocks();
        });

        document.getElementById('blockSourceFilter')?.addEventListener('change', () => {
            currentBlocksPage = 0;
            loadBlocks();
        });

        document.getElementById('blockStatusFilter')?.addEventListener('change', () => {
            currentBlocksPage = 0;
            loadBlocks();
        });

        document.getElementById('prevBlocksPage')?.addEventListener('click', () => {
            if (currentBlocksPage > 0) {
                currentBlocksPage--;
                loadBlocks();
            }
        });

        document.getElementById('nextBlocksPage')?.addEventListener('click', () => {
            currentBlocksPage++;
            loadBlocks();
        });

        // ===================================================================
        // Blocking Rules Page Logic
        // ===================================================================
        async function loadRules() {
            // Show loading
            document.getElementById('rulesLoading').style.display = 'block';
            document.getElementById('rulesTable').style.display = 'none';
            document.getElementById('rulesError').style.display = 'none';

            try {
                const response = await fetch('/api/dashboard/blocking/rules/list');
                const data = await response.json();

                if (!data.success) {
                    throw new Error('Failed to load rules');
                }

                const tbody = document.getElementById('rulesTableBody');
                tbody.innerHTML = '';

                if (data.rules.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 40px; color: var(--text-secondary);">No blocking rules found</td></tr>';
                } else {
                    data.rules.forEach(rule => {
                        const row = document.createElement('tr');
                        row.style.borderBottom = '1px solid var(--border)';

                        const statusBadge = rule.is_enabled ?
                            '<span style="background: #107C10; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px; font-weight: 600;">ENABLED</span>' :
                            '<span style="background: #605E5C; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px; font-weight: 600;">DISABLED</span>';

                        const typeBadge = {
                            'brute_force': '<span style="background: #D83B01; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px;">Brute Force</span>',
                            'api_reputation': '<span style="background: #FF8C00; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px;">API Reputation</span>',
                            'ml_threshold': '<span style="background: #8661C5; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px;">ML Threshold</span>',
                            'anomaly_pattern': '<span style="background: #0078D4; color: white; padding: 4px 8px; border-radius: 2px; font-size: 11px;">Anomaly Pattern</span>'
                        }[rule.rule_type] || rule.rule_type;

                        let conditionsText = '';
                        if (rule.rule_type === 'brute_force') {
                            conditionsText = `${rule.conditions.failed_attempts} attempts in ${rule.conditions.time_window_minutes} min`;
                        } else if (rule.rule_type === 'api_reputation') {
                            conditionsText = `Threat ‚â• ${rule.conditions.min_threat_level}, confidence ‚â• ${rule.conditions.min_confidence}`;
                        }

                        row.innerHTML = `
                            <td style="padding: 12px;">
                                <div style="font-size: 13px; font-weight: 600;">${rule.rule_name}</div>
                                <div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">${rule.description || 'No description'}</div>
                            </td>
                            <td style="padding: 12px;">${typeBadge}</td>
                            <td style="padding: 12px; font-size: 13px; font-weight: 600;">${rule.priority}</td>
                            <td style="padding: 12px; font-size: 12px;">
                                ${conditionsText}
                                <div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">Block: ${rule.block_duration_minutes} min</div>
                            </td>
                            <td style="padding: 12px; font-size: 12px;">
                                <div>Triggered: ${rule.times_triggered}</div>
                                <div>Blocked: ${rule.ips_blocked_total}</div>
                                ${rule.last_triggered_at ? `<div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">Last: ${formatTimestamp(rule.last_triggered_at)}</div>` : ''}
                            </td>
                            <td style="padding: 12px;">${statusBadge}</td>
                            <td style="padding: 12px;">
                                <button onclick="toggleRule(${rule.id})" style="padding: 4px 8px; border: 1px solid var(--border); background: var(--surface); border-radius: 2px; cursor: pointer; font-size: 11px;">
                                    ${rule.is_enabled ? 'Disable' : 'Enable'}
                                </button>
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                }

                // Show table
                document.getElementById('rulesLoading').style.display = 'none';
                document.getElementById('rulesTable').style.display = 'block';

            } catch (error) {
                console.error('Error loading rules:', error);
                document.getElementById('rulesLoading').style.display = 'none';
                document.getElementById('rulesError').style.display = 'block';
            }
        }

        async function toggleRule(ruleId) {
            try {
                const response = await fetch(`/api/dashboard/blocking/rules/${ruleId}/toggle`, {
                    method: 'POST'
                });

                const data = await response.json();

                if (data.success) {
                    loadRules();
                } else {
                    alert('Failed to toggle rule: ' + (data.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error toggling rule:', error);
                alert('Error toggling rule');
            }
        }

        // Rule form handlers
        document.getElementById('showCreateRuleForm')?.addEventListener('click', () => {
            document.getElementById('createRuleForm').style.display = 'block';
        });

        document.getElementById('cancelRuleForm')?.addEventListener('click', () => {
            document.getElementById('createRuleForm').style.display = 'none';
            resetRuleForm();
        });

        document.getElementById('ruleType')?.addEventListener('change', (e) => {
            const ruleType = e.target.value;
            document.getElementById('bruteForceConditions').style.display = ruleType === 'brute_force' ? 'block' : 'none';
            document.getElementById('threatConditions').style.display = ruleType === 'api_reputation' ? 'block' : 'none';
        });

        document.getElementById('submitCreateRule')?.addEventListener('click', async () => {
            const ruleName = document.getElementById('ruleName').value;
            const ruleType = document.getElementById('ruleType').value;
            const blockDuration = parseInt(document.getElementById('ruleBlockDuration').value);
            const priority = parseInt(document.getElementById('rulePriority').value);
            const description = document.getElementById('ruleDescription').value;

            if (!ruleName || !ruleType) {
                showMessage('ruleFormMessage', 'Please fill in required fields', 'error');
                return;
            }

            let conditions = {};

            if (ruleType === 'brute_force') {
                conditions = {
                    failed_attempts: parseInt(document.getElementById('failedAttempts').value),
                    time_window_minutes: parseInt(document.getElementById('timeWindow').value),
                    event_type: 'failed'
                };
            } else if (ruleType === 'api_reputation') {
                conditions = {
                    min_threat_level: document.getElementById('minThreatLevel').value,
                    min_confidence: parseFloat(document.getElementById('minConfidence').value),
                    sources: ['abuseipdb', 'virustotal', 'shodan']
                };
            }

            try {
                const response = await fetch('/api/dashboard/blocking/rules/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        rule_name: ruleName,
                        rule_type: ruleType,
                        conditions: conditions,
                        block_duration_minutes: blockDuration,
                        priority: priority,
                        description: description,
                        is_enabled: true,
                        auto_unblock: true,
                        notify_on_trigger: true
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showMessage('ruleFormMessage', `‚úÖ ${data.message}`, 'success');
                    setTimeout(() => {
                        document.getElementById('createRuleForm').style.display = 'none';
                        resetRuleForm();
                        document.getElementById('ruleFormMessage').style.display = 'none';
                        loadRules();
                    }, 2000);
                } else {
                    showMessage('ruleFormMessage', `‚ùå ${data.error || 'Failed to create rule'}`, 'error');
                }
            } catch (error) {
                console.error('Error creating rule:', error);
                showMessage('ruleFormMessage', '‚ùå Error creating rule', 'error');
            }
        });

        function resetRuleForm() {
            document.getElementById('ruleName').value = '';
            document.getElementById('ruleType').value = '';
            document.getElementById('ruleBlockDuration').value = '1440';
            document.getElementById('rulePriority').value = '50';
            document.getElementById('ruleDescription').value = '';
            document.getElementById('failedAttempts').value = '5';
            document.getElementById('timeWindow').value = '10';
            document.getElementById('minThreatLevel').value = 'high';
            document.getElementById('minConfidence').value = '0.5';
            document.getElementById('bruteForceConditions').style.display = 'none';
            document.getElementById('threatConditions').style.display = 'none';
        }

        document.getElementById('refreshRules')?.addEventListener('click', () => {
            loadRules();
        });

        // Helper function to show messages
        function showMessage(elementId, message, type) {
            const el = document.getElementById(elementId);
            el.textContent = message;
            el.style.display = 'block';
            el.style.background = type === 'success' ? '#DFF6DD' : '#FDE7E9';
            el.style.color = type === 'success' ? '#107C10' : '#D13438';
        }

        // Update showPage function to load page-specific content
        const originalShowPage = showPage;
        showPage = function(pageName) {
            originalShowPage(pageName);

            // Load page-specific content
            if (pageName === 'ip-blocks') {
                loadBlocks();
            } else if (pageName === 'rules') {
                loadRules();
            }
        };

        // ===================================================================
        // Quick Action Functions (called from table buttons)
        // ===================================================================
        async function quickBlock(ipAddress, reason) {
            if (!confirm(`Block IP ${ipAddress}?\n\nReason: ${reason}\nDuration: 24 hours`)) {
                return;
            }

            try {
                const response = await fetch('/api/dashboard/blocking/blocks/manual', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        ip_address: ipAddress,
                        reason: reason,
                        duration_minutes: 1440
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert(`‚úÖ IP ${ipAddress} blocked successfully!\n\nBlock ID: ${data.block_id}\nUnblock at: ${new Date(data.unblock_at).toLocaleString()}`);
                    // Reload current page if on blocks page
                    const currentHash = window.location.hash.substring(1);
                    if (currentHash === 'ip/blocks') {
                        loadBlocks();
                    }
                } else {
                    // Check if it's a duplicate block error
                    if (data.message && data.message.includes('already blocked')) {
                        const viewBlock = confirm(`‚ö†Ô∏è IP ${ipAddress} is already blocked!\n\nBlock ID: ${data.block_id}\n\nWould you like to view blocked IPs?`);
                        if (viewBlock) {
                            // Navigate to blocked IPs page
                            window.location.hash = '#ip/blocks';
                            showPage('ip-blocks');
                        }
                    } else {
                        alert(`‚ùå Failed to block IP: ${data.message || data.error || 'Unknown error'}`);
                    }
                }
            } catch (error) {
                console.error('Error blocking IP:', error);
                alert('‚ùå Error blocking IP. Please try again.');
            }
        }

        async function quickUnblock(ipAddress) {
            if (!confirm(`Unblock IP ${ipAddress}?`)) {
                return;
            }

            try {
                const response = await fetch('/api/dashboard/blocking/blocks/unblock', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        ip_address: ipAddress,
                        reason: 'Quick unblock from dashboard'
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert(`‚úÖ ${data.message}`);
                    loadBlocks(); // Reload the blocks table
                } else {
                    alert(`‚ùå Failed to unblock IP: ${data.error || 'Unknown error'}`);
                }
            } catch (error) {
                console.error('Error unblocking IP:', error);
                alert('‚ùå Error unblocking IP. Please try again.');
            }
        }
    </script>
</body>
</html>
